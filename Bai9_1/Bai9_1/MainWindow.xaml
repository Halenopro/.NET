<Window x:Class="Bai9_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bai9_1"
        mc:Ignorable="d"
        Title="Chọn sách" Height="450" Width="650"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Danh sách"
               Style="{StaticResource lableStyle}"/>
        <Label Grid.Row="0" Grid.Column="2" Content="Sách đã chọn"
                Style="{StaticResource lableStyle}"/>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <ListBox x:Name="lbDanhSach" SelectionMode="Multiple"
                     Height="250"
                     ItemsSource="{Binding AvailableBooks}"/> 
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="10,0" Grid.Row="1">
            <Button Content=">" Margin="0,5,0,5" Width="35" Click="MoveSelectedToChoose_Click"
                    />
            <Button Content=">>" Margin="0,5,0,5" Width="35" Click="MoveAllToChoose_Click"/>
            <Button Content=" &lt; " Margin="0,5,0,5" Width="35" Click="MoveSelectedToList_Click"></Button>
            <Button Content=" &lt;&lt; " Margin="0,5,0,5" Width="35" Click="MoveAllToList_Click"/>

        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1" >
            <ListBox x:Name="lbChosenBooks" Height="250" SelectionMode="Multiple"
                     ItemsSource="{Binding ChosenBooks}"/>
        </StackPanel>
        <Button Content="Thoát" Grid.Row="2" Grid.Column="2"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Right" Margin="0,10,0,0" Padding="10,5"
                Width="50" Click="ExitButton_Click"
                Style="{StaticResource buttonStyle}"/>

    </Grid>
</Window>
